{
  "name" : "My First Extension",
  "version" : "2.0",
  "description" : "Shows the content settings for the current site.",
  "permissions": [ "contentSettings", "tabs" ,"activeTab" , "http://*/*","notifications"],
  "browser_action": {
	"default_icon": "icon.png",
	"default_popup": "popup.html"
	},
  "content_scripts":[{
		"matches":["http://www.zk8.com.cn/*"],
		"js":["jquery-2.0.0.min.js", "content_script.js"],
		"run_at":"document_idle"

	}],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },


  "manifest_version": 2

}


